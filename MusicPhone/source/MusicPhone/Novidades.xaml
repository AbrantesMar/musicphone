<UserControl x:Class="MusicPhone.Novidades"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="150" d:DesignWidth="150">
    
    <Grid x:Name="LayoutRoot" Margin="0,0,0,0" Height="150" Width="150" MouseEnter="LayoutRoot_MouseEnter">
  
    <Image x:Name="imgFundo" Source="ApplicationIcon.png" Stretch="Fill" />
    <StackPanel Margin="0,91,0,0" Background="LightSkyBlue" Opacity="0.5">
    </StackPanel>
    <TextBlock x:Name="txblTexto" Text="Blablablabla" Opacity="1" Margin="0,91,0,0" TextWrapping="Wrap">
    </TextBlock>

    </Grid>
</UserControl>
